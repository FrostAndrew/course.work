nav.navbar.navbar-expand-md.navbar-dark.bg-danger.bg-gradient.sticky-top#navbar
    .container-fluid.pt-1
        a.navbar-brand(href='#').fs-4.pt-0.ms-5 ProEvent
        button.navbar-toggler(
            type="button",
            data-bs-toggle="collapse",
            data-bs-target="#collapsingContent",
            aria-controls="collapsingContent",
            aria-expanded="false",
            aria-label="Toggle navigation"
        )
            span.navbar-toggler-icon
        .collapse.navbar-collapse.align-middle.ms-md-5#collapsingContent
            .container-fluid
                ul.navbar-nav.me-auto.mb-2.mb-md-0.nav-items
